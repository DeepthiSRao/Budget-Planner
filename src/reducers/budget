import { SET_BUDGET, 
         ADD_EXPENSE, 
         DELETE_EXPENSE,  } from '../util/constants';

const initData = {
    'budget' : 0,
    'expenses' : []
};

export const budgetReducer = ( state = initData, action) => {
    switch(action.type){
        case SET_BUDGET: 
            return {
                ...state, 
                'budget' : action.data
            };
        case ADD_EXPENSE:
            return {
                ...state,
                'expenses' : [...state.expenses, action.data]
            };
        case DELETE_EXPENSE:
            const filteredExpenses = state.expenses.map(expense =>(expense.id !== action.id));

            return {
                ...state,
                filteredExpenses,
            }
        default:
            return state;
    }
}